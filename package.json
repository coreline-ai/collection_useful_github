{
  "name": "client",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:all": "bash scripts/dev-all.sh",
    "dev:status": "bash scripts/dev-status.sh",
    "db:backup": "bash scripts/db-backup.sh",
    "db:restore": "bash scripts/db-restore.sh",
    "db:verify": "bash scripts/db-verify.sh",
    "macos:install": "bash scripts/macos/install-launchd.sh",
    "macos:install:dry": "bash scripts/macos/install-launchd.sh --dry-run",
    "macos:uninstall": "bash scripts/macos/uninstall-launchd.sh",
    "macos:status": "bash scripts/macos/status-launchd.sh",
    "macos:check-resume": "bash scripts/macos/check-resume.sh 30",
    "macos:self-test-resume": "bash scripts/macos/self-test-resume-no-sleep.sh 3",
    "server:dev": "npm --prefix server run dev",
    "server:start": "npm --prefix server start",
    "server:migrate": "npm --prefix server run migrate",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:e2e:postgres": "bash scripts/run-postgres-e2e.sh",
    "scan:secrets": "bash scripts/scan-secrets.sh",
    "scan:secrets:history": "bash scripts/scan-secrets-history.sh",
    "audit:deps": "npm audit --audit-level=high --omit=dev && npm --prefix server audit --audit-level=high --omit=dev",
    "db:drill": "bash scripts/db-drill.sh",
    "perf:check-web-vitals": "bash scripts/perf/check-web-vitals-thresholds.sh",
    "release:changelog": "bash scripts/release-changelog.sh",
    "qa:browser-mobile": "bash scripts/qa-browser-mobile.sh",
    "restore:dashboard:chrome": "node scripts/restore-dashboard-from-chrome-localstorage.mjs",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "dompurify": "^3.3.1",
    "marked": "^17.0.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^17.3.0",
    "jsdom": "^28.1.0",
    "level": "^8.0.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
